.page-header
  = link_to new_practice_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t('new_model', model: Practice.model_name.human)
  %h1= Practice.model_name.human.pluralize

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t(:practice_time)
        %th= Practice.human_attribute_name(:stage)
        %th= Practice.human_attribute_name(:location)
        %th.actions

    %tbody
      - @practices.each do |practice|
        %tr
          %td= practice.time
          -# i18n-tasks-use t('date_range.with_time.hour') i18n-tasks-use t('date_range.with_time.same_days')
          %td= practice.stage.try(:name)
          %td= practice.location.try(:name)
          %td.action
            = link_to practice, title: t('show') do
              %span.glyphicon.glyphicon-info-sign{ aria: { hidden: 'true' } }
              %span.sr-only>= t('show')
            = link_to edit_practice_path(practice), title: t('edit') do
              %span.glyphicon.glyphicon-pencil{ aria: { hidden: 'true' } }
              %span.sr-only>= t('edit')
