.page-header
  = link_to new_user_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t('new_model', model: User.model_name.human)
  %h1= User.model_name.human.pluralize

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= Bmark.human_attribute_name(:email)
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= link_to t('show'), user
          %td= link_to t('edit'), edit_user_path(user)
          %td= link_to t('destroy'), user, :data => { confirm: t('are_you_sure') }, :method => :delete
